# /etc/nginx/sites-available/alga-nas

server {
        listen 80 default_server;
        listen [::]:80 default_server;

        listen 443 default_server;
        listen [::]:443 default_server;
        ssl_reject_handshake on;

        server_name _;
        return 444;
}

server{
        listen 80;
        listen [::]:80;
        server_name alga-nas.com.br;
        return 301 https://$host$request_uri;
}

server {

        listen 443 ssl http2;
        listen [::]:443 ssl http2;

        root /var/www/alga-nas;

        server_name alga-nas.com.br;

        ssl_certificate /etc/letsencrypt/live/alga-nas.com.br/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/alga-nas.com.br/privkey.pem;

}